{
  "compilerOptions": {
    "jsx": "react",
    "composite": true,
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist" // Ensure that emit is enabled by specifying an output directory
  },
  "include": ["src"]
}